#:import Clipboard kivy.core.clipboard.Clipboard
<BtnServicio>:
    elevation:1
    padding:'3sp'
    ripple_behavior: True
    radius:10
    size_hint:None,None
    height:"120dp"
    width:"120dp"
    md_bg_color:'#ffffff'
    orientation:'vertical'
    on_release:
        if self.children[0].text=='ROPA PARA LAV / KG':app.root.ids.main_manager.get_screen('Venta_Screen').get_cant()
        else:app.root.ids.main_manager.get_screen('Venta_Screen').add_service(self.service)
    MDLabel:
        id:srvc
        font_name:'Regular'
        halign:'center'
        text:root.service

<ActivosCard>:
    elevation:1
    size_hint:None,None
    height:'200dp'
    width:'200dp'
    orientation:'vertical'
    padding:15
    spacing:10
    MDBoxLayout:
        size_hint_y:None
        height:self.minimum_height
        MDLabel:
            id:user_name
            adaptive_height:True
            font_name:'Regular'
            font_size:'19sp'
            size_hint_y:None
        MDFloatLayout:
            size_hint:None,None
            height:user_name.height
            width:0
            MDIconButton:
                id:statusIcon
                pos:(root.x+root.width-self.width/2-dp(5),root.y+root.height-self.height/2-dp(5))
                theme_icon_color: "Custom"
                icon_color: '#ffffff'
                size:('55dp','55dp')
    MDBoxLayout:
        spacing:10
        size_hint_y:None
        height:self.minimum_height
        MDIcon:
            icon:'store-marker'
        MDLabel:
            id:aDomicilio
            adaptive_height:True
    MDBoxLayout:
        spacing:10
        size_hint_y:None
        height:self.minimum_height
        MDIcon:
            icon:'calendar-month'
        MDLabel:
            id:fecha
            adaptive_height:True
    MDSeparator:

<ContentNoCargada>:
    spacing:10
    MDIcon:
        icon:'clock'
    MDLabel:
        text:'Nota pendiente de carga'
        font_name:'Regular'
        font_size:'16sp'

<ContentCargada>:
    spacing:10
    size_hint_y:None
    height:self.minimum_height
    MDBoxLayout:
        orientation:'vertical'
        size_hint_y:None
        height:self.minimum_height
        MDLabel:
            adaptive_height:True
            text:'Total'
            font_name:'Regular'
            font_size:'14sp'
        MDLabel:
            id:total
            adaptive_height:True
            font_name:'Regular'
            font_size:'14sp'
    MDBoxLayout:
        orientation:'vertical'
        size_hint_y:None
        height:self.minimum_height
        MDLabel:
            adaptive_height:True
            text:'Saldo'
            font_name:'Regular'
            font_size:'14sp'
            halign:'right'
        MDLabel:
            adaptive_height:True
            id:saldo
            font_name:'Regular'
            font_size:'14sp'
            halign:'right'

<LocationMenuHeader>:
    orientation: "vertical"
    padding: "4dp"

    MDBoxLayout:
        spacing: "12dp"

        MDIcon:
            icon: "map-marker"
            pos_hint: {"center_y": .5}

        MDLabel:
            text: root.address
            adaptive_size: True
            pos_hint: {"center_y": .5}
