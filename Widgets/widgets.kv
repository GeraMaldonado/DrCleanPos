<BtnServicio>:
    elevation:1
    padding:'3sp'
    ripple_behavior: True
    radius:10
    size_hint:None,None
    height:120
    width:120
    md_bg_color:'#ffffff'
    orientation:'vertical'
    on_release:
        if self.children[0].text=='ROPA PARA LAV / KG':app.root.ids.main_manager.get_screen('Venta_Screen').get_cant()
        else:app.root.ids.main_manager.get_screen('Venta_Screen').add_service(self.children[0].text)
    MDLabel:
        id:srvc
        font_name:'Regular'
        halign:'center'

<ActivosCard>:
    elevation:1
    size_hint:None,None
    height:'200dp'
    width:'200dp'
    orientation:'vertical'
    padding:15
    spacing:10
    ripple_behavior: True
    MDBoxLayout:
        size_hint_y:None
        height:self.minimum_height
        MDLabel:
            id:user_name
            adaptive_height:True
            font_name:'Regular'
            font_size:'19sp'
            text:'Luis Ruben Ramos Cortes'
            size_hint_y:None
        MDFloatLayout:
            size_hint:None,None
            height:user_name.height
            width:0
            MDIconButton:
                icon:'truck'
                pos:(root.x+root.width-self.width/2-dp(5),root.y+root.height-self.height/2-dp(5))
                md_bg_color:'#089cba'
                theme_icon_color: "Custom"
                icon_color: '#ffffff'
                size:('55dp','55dp')
    MDBoxLayout:
        spacing:10
        size_hint_y:None
        height:self.minimum_height
        MDIcon:
            icon:'store-marker'
        MDLabel:
            text:'A domicilio'
            adaptive_height:True
    MDBoxLayout:
        spacing:10
        size_hint_y:None
        height:self.minimum_height
        MDIcon:
            icon:'calendar-month'
        MDLabel:
            text:'25/Mar/2023'
            adaptive_height:True
    MDSeparator:
    MDBoxLayout:
        spacing:10
        size_hint_y:None
        height:self.minimum_height
        MDBoxLayout:
            orientation:'vertical'
            size_hint_y:None
            height:self.minimum_height
            MDLabel:
                adaptive_height:True
                text:'Total'
                font_name:'Regular'
                font_size:'14sp'
            MDLabel:
                adaptive_height:True
                text:'$459.60'
                font_name:'Regular'
                font_size:'14sp'
        MDBoxLayout:
            orientation:'vertical'
            size_hint_y:None
            height:self.minimum_height
            MDLabel:
                adaptive_height:True
                text:'Saldo'
                font_name:'Regular'
                font_size:'14sp'
                halign:'right'
            MDLabel:
                adaptive_height:True
                text:'$200.00'
                font_name:'Regular'
                font_size:'14sp'
                halign:'right'
