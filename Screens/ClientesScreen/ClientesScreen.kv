#:import MapView kivy.garden.mapview.mapview.view

<LayoutSD>:
    md_bg_color:0,0,0,.4
    orientation:'vertical'
    MDFloatLayout:
    MDLabel:
        text:'Sin domicilios registrados'
        theme_text_color: "Custom"
        text_color: "#ffffff"
        halign:'center'
        font_name:'Bold'
        adaptive_height:True
    MDAnchorLayout:
        anchor_:'center'
        size_hint_y:None
        MDRaisedButton:
            text:'Agregar domicilio'
            md_bg_color:'#089cba'
            pos_hint:{'right':.95,'top':.95}
            on_release:app.root.ids.main_manager.get_screen('Clientes_Screen').add_address(root)
    MDFloatLayout:

<Botones>:

<ClientesScreen>:
    name:'Clientes_Screen'
    MDBoxLayout:
        padding:15
        spacing:10
        ScreenManager:
            id:clientes_manager
            Screen:
                name:'lista_clientes'
                id:manager_clientes
                MDBoxLayout:
                    orientation:'vertical'
                    spacing:10
                    padding:30
                    MDBoxLayout:
                        spacing:5
                        size_hint_y:None
                        height:self.minimum_height
                        MDTextField:
                            icon_left:'magnify'
                            size_hint_y:None
                            hint_text:'ID cliente, nombre'
                            on_text:root.busqueda(self.text)
                            id:fldSearch
                        MDIconButton:
                            icon:'account-plus'
                            theme_icon_color: "Custom"
                            size_hint_x:None
                            width:'25dp'
                            on_release:root.set_state('new')
                    ScrollView:
                        MDList:
                            id:clientes_list
            Screen:
                name:'detalles_cliente'
                ScrollView:
                    MDGridLayout:
                        cols:1
                        spacing:3
                        padding:50,0,50,0
                        adaptive_height:True
                        id:datos
                        MDBoxLayout:
                            spacing:10
                            size_hint_y:None
                            height:self.minimum_height
                            MDIconButton:
                                icon:'arrow-left'
                                size_hint_x:None
                                on_release:
                                    clientes_manager.current='lista_clientes'
                                    root.clean()
                            MDFloatLayout:
                        MDLabel:
                            text:'Datos generales:'
                            adaptive_height:True
                            font_size:'25sp'
                            font_name:'Regular'
                            size_hint_y:None
                            height:'50dp'
                        MDTextField:
                            icon_left:'account-key'
                            hint_text:'ID de usuario'
                            id:id_user
                            size_hint_y:None
                            height:'50dp'
                            disabled:True
                        MDTextField:
                            icon_left:'account'
                            hint_text:'Nombre(s)'
                            id:nombre
                            size_hint_y:None
                            height:'50dp'
                            disabled:True
                        MDTextField:
                            icon_left:'account'
                            hint_text:'Apellido(s)'
                            id:apellido
                            size_hint_y:None
                            height:'50dp'
                            disabled:True
                        MDTextField:
                            icon_left:'phone-classic'
                            hint_text:'Teléfono'
                            id:telefono
                            size_hint_y:None
                            height:'50dp'
                            disabled:True
                        MDLabel:
                            text:'Datos fiscales:'
                            adaptive_height:True
                            font_size:'25sp'
                            font_name:'Regular'
                            size_hint_y:None
                            height:'50dp'
                        MDTextField:
                            icon_left:'account'
                            hint_text:'RFC'
                            size_hint_y:None
                            height:'50dp'
                            id:rfc
                            disabled:True
                        MDTextField:
                            icon_left:'map-marker'
                            hint_text:'Domicilio Fiscal'
                            id:domicilio_fiscal
                            size_hint_y:None
                            height:'50dp'
                            disabled:True
                        MDTextField:
                            icon_left:'account'
                            hint_text:'Razón Social'
                            id:razon_social
                            size_hint_y:None
                            height:'50dp'
                            disabled:True
                        MDTextField:
                            icon_left:'account'
                            hint_text:'Régimen Fiscal'
                            id:regimen_fiscal
                            size_hint_y:None
                            height:'50dp'
                            disabled:True
            Screen:
                name:'add_address'
                MDBoxLayout:
                    padding:10
                    spacing:10
                    orientation:'vertical'
                    MDTextField:
                        icon_left:'magnify'
                        hint_text:'Buscar domicilio'
                        on_text_validate:root.show_sugest(self.text)
                        id:fldSearchAddres
                    ScrollView:
                        MDList:
                            id:datos
                    MDBoxLayout:
                        spacing:10
                        MDRaisedButton:
                            size_hint_x:1
                            text:'Cancelar'
                            md_bg_color: "#990000"
                            on_release:clientes_manager.current="detalles_cliente"
                        MDRaisedButton:
                            size_hint_x:1
                            text:'Guardar'
                            md_bg_color: "#089cba"
        MDCard:
            elevation:1
            RelativeLayout:
                id:mapa_layout
                MapView:
                    id:mapa
                    zoom:12
                    lat:22.763704
                    lon:-102.555196
